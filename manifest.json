{
  "name": "Curriculum Tracker - Avanti Fellows",
  "short_name": "Curriculum Tracker",
  "description": "Track curriculum progress, attendance, and feedback for JNV Program across 32 schools. Designed for teachers in remote areas with low connectivity.",
  "start_url": "/",
  "id": "/",
  "scope": "/",
  "display": "standalone",
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui"
  ],
  "background_color": "#F4B41A",
  "theme_color": "#F4B41A",
  "orientation": "portrait-primary",
  "lang": "en",
  "dir": "ltr",
  "categories": ["education", "productivity", "utilities"],
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=org.avantifellows.curriculumtracker",
      "id": "org.avantifellows.curriculumtracker"
    },
    {
      "platform": "windows",
      "url": "https://www.microsoft.com/store/apps/curriculumtracker"
    }
  ],
  "scope_extensions": [
    {
      "origin": "https://avantifellows.org"
    },
    {
      "origin": "https://curriculum-murex.vercel.app"
    }
  ],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "handle_links": "preferred",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "widgets": [
