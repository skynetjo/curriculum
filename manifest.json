  "shortcuts": [
    {
      "name": "Mark Attendance",
      "short_name": "Attendance",
      "description": "Quickly mark student attendance",
      "url": "/?page=attendance",
      "icons": [{ "src": "/Icon-192.png", "sizes": "192x192", "type": "image/png" }]
    },
    {
      "name": "Curriculum Progress",
      "short_name": "Curriculum",
      "description": "Update curriculum progress",
      "url": "/?page=curriculum",
      "icons": [{ "src": "/Icon-192.png", "sizes": "192x192", "type": "image/png" }]
    },
    {
      "name": "Student Feedback",
      "short_name": "Feedback",
      "description": "Collect student feedback",
      "url": "/?page=feedback",
      "icons": [{ "src": "/Icon-192.png", "sizes": "192x192", "type": "image/png" }]
    },
    {
      "name": "Analytics Dashboard",
      "short_name": "Analytics",
      "description": "View analytics and reports",
      "url": "/?page=analytics",
      "icons": [{ "src": "/Icon-192.png", "sizes": "192x192", "type": "image/png" }]
    }
  ],
  "share_target": {
    "action": "/?share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "text/*", ".csv", ".xlsx"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/?file-handler",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+curriculum",
      "url": "/?protocol=%s"
    }
  ],
  "note_taking": {
    "new_note_url": "/?action=new-note"
  }
}
